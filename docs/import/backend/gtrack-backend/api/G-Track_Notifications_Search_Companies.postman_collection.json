{
  "info": {
    "name": "G-Track - Notifications, Search & Companies",
    "description": "API collection for G-Track TMS notifications, global search, and company management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://gtrack-backend-gtrack-backend-lnf9mi.laravel.cloud/api/v0",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications (All)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications",
              "host": ["{{base_url}}"],
              "path": ["notifications"]
            }
          }
        },
        {
          "name": "Get Notifications (Unread Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications?unread_only=true",
              "host": ["{{base_url}}"],
              "path": ["notifications"],
              "query": [
                {
                  "key": "unread_only",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Notifications (Filter by Category)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications?category=driver&priority=urgent",
              "host": ["{{base_url}}"],
              "path": ["notifications"],
              "query": [
                {
                  "key": "category",
                  "value": "driver",
                  "description": "driver, vehicle, order, invoice, system"
                },
                {
                  "key": "priority",
                  "value": "urgent",
                  "description": "low, normal, high, urgent"
                }
              ]
            }
          }
        },
        {
          "name": "Get Notifications (Paginated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications?page=1&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["notifications"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/unread-count",
              "host": ["{{base_url}}"],
              "path": ["notifications", "unread-count"]
            }
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/:notification_id/read",
              "host": ["{{base_url}}"],
              "path": ["notifications", ":notification_id", "read"],
              "variable": [
                {
                  "key": "notification_id",
                  "value": "9d4e5f6a-7b8c-9d0e-1f2a-3b4c5d6e7f8a",
                  "description": "UUID of notification"
                }
              ]
            }
          }
        },
        {
          "name": "Mark All as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/mark-all-read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "mark-all-read"]
            }
          }
        },
        {
          "name": "Archive Notification",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/notifications/:notification_id",
              "host": ["{{base_url}}"],
              "path": ["notifications", ":notification_id"],
              "variable": [
                {
                  "key": "notification_id",
                  "value": "9d4e5f6a-7b8c-9d0e-1f2a-3b4c5d6e7f8a",
                  "description": "UUID of notification"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Global Search (All Categories)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/search?q=Ivan",
              "host": ["{{base_url}}"],
              "path": ["search"],
              "query": [
                {
                  "key": "q",
                  "value": "Ivan",
                  "description": "Search query (min 2 chars)"
                }
              ]
            }
          }
        },
        {
          "name": "Search Drivers Only",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/search?q=ivan&categories[]=drivers",
              "host": ["{{base_url}}"],
              "path": ["search"],
              "query": [
                {
                  "key": "q",
                  "value": "ivan"
                },
                {
                  "key": "categories[]",
                  "value": "drivers"
                }
              ]
            }
          }
        },
        {
          "name": "Search Multiple Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/search?q=mesar&categories[]=drivers&categories[]=vehicles&categories[]=orders&limit=10",
              "host": ["{{base_url}}"],
              "path": ["search"],
              "query": [
                {
                  "key": "q",
                  "value": "mesar"
                },
                {
                  "key": "categories[]",
                  "value": "drivers"
                },
                {
                  "key": "categories[]",
                  "value": "vehicles"
                },
                {
                  "key": "categories[]",
                  "value": "orders"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Max results per category (1-20)"
                }
              ]
            }
          }
        }
      ]
    },
    {
